) : name === 'windows' ? (
  <svg {...common}>
    <path {...stroke} d="M3 5l8-2v9H3V5zM13 3l8-1v10h-8V3zM3 14h8v9l-8-2v-7zM13 14h8v10l-8-1V14z" />
  </svg>
) : name === 'linux_appimage' || name === 'linux_deb' || name === 'linux_rpm' ? (
  <svg {...common}>
    <path {...stroke} d="M12 3c1.7 0 3 1.3 3 3v2h-6V6c0-1.7 1.3-3 3-3z" />
    <path {...stroke} d="M9 8l-2 4c-1 2-1 3 0 5l2 4h6l2-4c1-2 1-3 0-5l-2-4H9z" />
    <path {...stroke} d="M10 12h.01M14 12h.01" />
  </svg>
) : name === 'npx' ? (
  <svg {...common}>
    <path {...stroke} d="M4 17l6-6-6-6" />
    <path {...stroke} d="M11 19h9" />
  </svg>
) : name === 'source' ? (
  <svg {...common}>
    <path {...stroke} d="M8 17l-4-4 4-4" />
