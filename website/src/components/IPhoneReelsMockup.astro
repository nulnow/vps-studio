<script is:inline>
  function toggleMute() {
    const video = document.getElementById('reels-video')
    const btn = document.getElementById('reels-mute-btn')
    const volumeXIcon = document.getElementById('reels-volume-x-icon')
    const volumeIcon = document.getElementById('reels-volume-icon')
    
    if (video && btn && volumeXIcon && volumeIcon) {
      video.muted = !video.muted
      if (video.muted) {
        volumeXIcon.style.display = 'block'
        volumeIcon.style.display = 'none'
        btn.setAttribute('aria-label', 'Unmute video')
      } else {
        volumeXIcon.style.display = 'none'
        volumeIcon.style.display = 'block'
        btn.setAttribute('aria-label', 'Mute video')
      }
    }
  }
</script>

