{
  "name": "vps-studio",
  "version": "0.1.0",
  "description": "Electron + React + TypeScript + Tailwind starter",
  "license": "MIT",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "bin": {
    "vps-studio": "./cli.js"
  },
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --port 5173",
    "dev:electron": "wait-on tcp:5173 && nodemon -q --watch src/main --watch src/preload --watch backend --watch interface --ext ts --exec \"npm run build:electron && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron dist-electron/main.cjs\"",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "node scripts/build-electron.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "package": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish never"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "@legendapp/state": "^2.1.15",
    "hono": "^4.6.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "lucide-react": "^0.536.0",
    "ssh2": "^1.16.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/ssh2": "^1.15.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^31.6.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.0",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.vpsstudio.app",
    "productName": "VPS Studio",
    "icon": "build/icon.png",
    "files": [
      "dist/**",
      "dist-electron/**",
      "node_modules/**",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis",
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}


