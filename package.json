{
  "name": "vps-studio",
  "version": "0.0.2-alpha",
  "description": "VPS Studio CLI - Install and setup VPS Studio development environment",
  "license": "MIT",
  "type": "module",
  "main": "cli.js",
  "bin": {
    "vps-studio": "./cli.js"
  },
  "files": [
    "cli.js",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nulnow/vps-studio.git"
  },
  "homepage": "https://vps-studio.com",
  "bugs": {
    "url": "https://github.com/nulnow/vps-studio/issues"
  },
  "keywords": [
    "vps",
    "docker",
    "dev-containers",
    "development",
    "cli",
    "server-management",
    "ssh",
    "deployment"
  ],
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --port 5173",
    "dev:electron": "wait-on tcp:5173 && nodemon -q --watch src/main --watch src/preload --watch backend --watch interface --ext ts --exec \"npm run build:electron && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron dist-electron/main.cjs\"",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "node scripts/build-electron.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "package": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish never",
    "prepublishOnly": "node -e \"const fs = require('fs'); ['cli.js', 'README.md', 'LICENSE'].forEach(f => { try { fs.accessSync(f); } catch(e) { console.error('Missing required file:', f); process.exit(1); } }); console.log('âœ… All required files present')\""
  },
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "@legendapp/state": "^2.1.15",
    "hono": "^4.6.12",
    "lucide-react": "^0.536.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ssh2": "^1.16.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/ssh2": "^1.15.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^31.6.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.0",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.vpsstudio.app",
    "productName": "VPS Studio",
    "icon": "build/icon.png",
    "asar": true,
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json",
      "!**/node_modules/**",
      "**/node_modules/ssh2/**",
      "**/node_modules/asn1/**",
      "**/node_modules/safer-buffer/**",
      "**/node_modules/bcrypt-pbkdf/**",
      "**/node_modules/tweetnacl/**",
      "**/node_modules/@hono/node-server/**"
    ],
    "asarUnpack": [
      "**/node_modules/ssh2/**/*.node",
      "**/node_modules/@hono/node-server/**/*.node"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.cjs"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "compression": "maximum"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "compression": "maximum"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "compression": "maximum"
    }
  }
}
